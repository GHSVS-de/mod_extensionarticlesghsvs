<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
	<name>MOD_EXTENSIONARTICLESGHSVS</name>
	<author>G@HService Berlin Neukölln, Volkmar Volli Schlothauer (ghsvs.de)</author>
	<creationDate>2021-07-15</creationDate>
	<copyright>Copyright (C) 2021, G@HService Berlin Neukölln, Volkmar Volli Schlothauer. All rights reserved.</copyright>
	<license>GNU GPLv3 http://www.gnu.org/licenses/gpl-3.0.html; See LICENSE.txt</license>
	<authorUrl>http://www.ghsvs.de</authorUrl>
	<version>2021.07.17</version>

	<description>MOD_EXTENSIONARTICLESGHSVS_XML_DESCRIPTION</description>

	<updateservers><server type="extension" priority="1" name="MOD_EXTENSIONARTICLESGHSVS">https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/mod_extensionarticlesghsvs-update.xml</server></updateservers>

	<changelogurl>https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/mod_extensionarticlesghsvs-changelog.xml</changelogurl>

	<infourl>https://updates.ghsvs.de/changelog.php?file=mod_extensionarticlesghsvs</infourl>

	<scriptfile>installerScript.php</scriptfile>
	<minimumPhp>7.2.0</minimumPhp>
	<minimumJoomla>3.9.0</minimumJoomla>
	<!--<maximumJoomla>3.10.99999</maximumJoomla>
	<maximumPhp>7.4.999999</maximumPhp>-->
	<allowDowngrades>1</allowDowngrades>

	<namespace path="src">Joomla\Module\ExtensionArticlesGhsvs</namespace>

	<files>
		<filename module="mod_extensionarticlesghsvs">mod_extensionarticlesghsvs.php</filename>
		<filename>installerScript.php</filename>
		<filename>LICENSE.txt</filename>
		<folder>language</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="show_author" type="list" default="0" filter="integer"
					label="show_author">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="show_create_date" type="list" default="0" filter="integer"
					label="show_create_date">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="show_modify_date" type="list" default="0" filter="integer"
					label="show_modify_date">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset><!--/basic-->
			<fieldset name="advanced">

				<field name="layout" type="modulelayout"
					class="custom-select"
				 label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field name="moduleclass_sfx" type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" />

			</fieldset>
		</fields>
	</config>
</extension>
